<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorPlomoOficialEmpresa"/>
        </shape>
    </item>

    <item  android:state_focused="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/colorPlomoOficialEmpresaAl75PorCiento"
            android:endColor="@color/colorPlomoOficialEmpresaAl75PorCiento" />
            <size android:width="45dp"
                   android:height="45dp"/>

        </shape>
    </item>

</selector>