<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/lista_recojo_list_view_paddingTop"
    android:paddingBottom="@dimen/lista_recojo_list_view_paddingBottom"
    android:paddingLeft="@dimen/lista_recojo_list_view_paddingLeft"
    android:scrollbarSize="@dimen/lista_recojo_list_view_scrollbarSize"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--imagen eliminar y guia-->
        <RelativeLayout
            android:id="@+id/lista_entregas_toolbar_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp">
            <!--imagen eliminar y guia-->
            <LinearLayout
                android:id="@+id/reg_entrega_layout_guia_agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">
                <!--eliminar-->
                <LinearLayout
                    android:id="@+id/reg_entrega_layoutEliminarGuia"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="left">
                    <ImageView
                        android:id="@+id/reg_entrega_imgEliminar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp" />
                </LinearLayout>
                <!--nro guia-->
                <TextView android:id="@+id/reg_entrega_nro_guia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textSize="@dimen/fila_principal_text_size"
                    android:textColor="@color/colorPlomoOficialEmpresa"/>

                <TextView android:id="@+id/reg_entrega_flg_registrar_imagen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:textSize="30dp"
                    android:text="1"
                    android:textColor="@color/colorRojoOficialEmpresa"
                    android:visibility="gone"/>
                <TextView android:id="@+id/reg_entrega_toma_foto_cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:text="1"
                    android:textColor="@color/colorRojoOficialEmpresa"
                    android:visibility="gone"/>
            </LinearLayout>
            <!--registrar imagen y vista previa-->
            <LinearLayout
                android:id="@+id/reg_entrega_layout_guia_agregarc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <!--Adjuntar Imagen-->
                <LinearLayout
                    android:id="@+id/reg_entrega_layoutAdjuntarImagen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/reg_entrega_imgAdjuntarImagen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp" />
                </LinearLayout>
                <!--Registrar Imagen-->
                <LinearLayout
                    android:id="@+id/reg_entrega_layoutRegistarImagen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/reg_entrega_imgRegistarImagen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp" />
                </LinearLayout>
                <!--Vista Previa-->
                <LinearLayout
                    android:id="@+id/reg_entrega_layoutVistaPrevia"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="left">
                    <ImageView
                        android:id="@+id/reg_entrega_imgVistaPrevia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <TextView android:id="@+id/reg_entrega_txtSolicitudAno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:textSize="@dimen/fila_principal_text_size"
            android:textColor="@color/colorPlomoOficialEmpresa"
            android:visibility="gone"/>

        <TextView android:id="@+id/reg_entrega_txtSolicitudNro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:textSize="@dimen/fila_principal_text_size"
            android:textColor="@color/colorPlomoOficialEmpresa"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>